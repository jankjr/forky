{
  "name": "@slot0/forky",
  "version": "0.3.2",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "main": "./lib/index.cjs",
  "description": "Fast and efficient EVM forks",
  "keywords": [],
  "sideEffects": false,
  "author": "jan@slot0.io",
  "repository": {
    "type": "git",
    "url": "git@github.com:jankjr/forky.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "files": [
    "lib/**/*.?({c,m}){t,j}s",
    "platforms/**/*"
  ],
  "neon": {
    "type": "library",
    "org": "@slot0/forky",
    "platforms": [
      "darwin-arm64",
      "linux-x64-gnu"
    ],
    "load": "./src/load.cts"
  },
  "scripts": {
    "test": "tsc &&cargo test",
    "cargo-build": "tsc && cargo build --message-format=json-render-diagnostics > cargo.log",
    "cross-build": "npm run cross-build-linux && npm run cross-build-darwin",
    "cross-build-linux": "tsc && cross build --message-format=json-render-diagnostics --target x86_64-unknown-linux-gnu --release > cross-x86_64-unknown-linux-gnu.log",
    "cross-build-darwin": "tsc && cross build --message-format=json-render-diagnostics --target aarch64-apple-darwin --release > cross-darwin.log",
    "cross-build-win32": "tsc && cross build --message-format=json-render-diagnostics --target x86_64-pc-windows-msvc --release > cross-win32.log",
    "postcargo-build": "neon dist < cargo.log",
    "postcross-build": "npm run postcross-build-darwin && npm run postcross-build-linux",
    "postcross-build-darwin": "neon dist --platform darwin-arm64 --file 'target/aarch64-apple-darwin/release/libforky.dylib'",
    "postcross-build-linux": "neon dist -m /target --platform linux-x64-gnu < cross-x86_64-unknown-linux-gnu.log",
    "postcross-build-win32": "neon dist -m /target --platform win32-x64-msvc < cross-win32.log",
    "debug": "npm run cargo-build --",
    "build": "npm run cargo-build -- --release",
    "cross": "npm run cross-build -- --release",
    "version": "neon bump --binaries platforms && git add .",
    "release": "gh workflow run release.yml -f dryrun=false -f version=patch",
    "dryrun": "gh workflow run publish.yml -f dryrun=true"
  },
  "type": "commonjs",
  "types": "./lib/index.d.cts",
  "license": "ISC",
  "devDependencies": {
    "@neon-rs/cli": "^0.1.82",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@neon-rs/load": "^0.1.82"
  }
}
